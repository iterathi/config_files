!! URxvt Appearance

URxvt.font: xft:HackNerdFontMono-Regular:style=Regular:size=12
URxvt.boldFont: xft:HackNerdFontMono-Bold:style=Bold:size=12
URxvt.italicFont: xft:HackNerdFontMono-Italic:style=Italic:size=12
URxvt.boldItalicfont: xft:HackNerdFontMono-BoldItalic:style=Bold Italic:size=12
URxvt.letterSpace: 0
URxvt.lineSpace: 2
URxvt.geometry: 115x27
URxvt.internalBorder: 12
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.iso14755: false


!! URxvt Keybinds
! scroll one line higher
URxvt.keysym.Shift-Up: command:\033]720;1\007
! scroll one line lower
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
! jump to next word
URxvt.keysym.Control-Right: \033[1;5C
! jump to previous word
URxvt.keysym.Control-Left: \033[1;5D

!! Copy Paste & Other Extensions
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.Control-Shift-c: perl:clipboard:copy
URxvt.keysym.Control-Shift-v: perl:clipboard:paste
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1
