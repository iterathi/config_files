{
    // Disable the minimap
    "editor.minimap.enabled": false,
    // Render whitespace when a portion of text is selected
    "editor.renderWhitespace": "selection",
    // Only show line highlight in gutter
    "editor.renderLineHighlight": "gutter",
    // Disable glyph margin
    "editor.glyphMargin": false,
    // Font settings
    "editor.fontFamily": "'Jetbrains Mono', 'monospace', monospace",
    "editor.fontSize": 15,
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    // Caret/cursor settings
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    // Line height
    "editor.lineHeight": 25,
    // Disable guides for bracket pairs
    "editor.guides.bracketPairs": false,
    // Disable breadcrumbs
    "breadcrumbs.enabled": false,
    // Set window title settings
    "window.title": "${dirty}${activeEditorShort}",
    // Set title bar style - sets correct gtk theme style in Gnome
    "window.titleBarStyle": "native",
    // Disable custom title bar
    "window.customTitleBarVisibility": "auto",
    // Set color theme
    "workbench.colorTheme": "Tokyo Night",
    // Set indent guides to onHover
    "workbench.tree.renderIndentGuides": "none",
    "editor.guides.indentation": false,
    // Enable smooth scrolling
    "editor.smoothScrolling": true,
    // Disable code folding
    "editor.folding": false,
    // Open untrusted files
    "security.workspace.trust.untrustedFiles": "open",
    // Language specific settings
    "[html]":{
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[css]":{
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[javascript]":{
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[lua]":{
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    // Use spaces instead of tabs
    "editor.insertSpaces": true,
    // Use Prettier extension for formatting all languages by default
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "window.menuBarVisibility": "toggle",
    "workbench.activityBar.location": "top"
}